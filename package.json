{
  "name": "@lamnhan/ngxer",
  "version": "0.0.1",
  "description": "Tool for prerendering Angular apps",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "main": "src/public-api.js",
  "types": "src/public-api.d.ts",
  "bin": {
    "ngxer": "src/bin.js"
  },
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc",
    "build:lib": "npm run compile && npm i -g",
    "build:app": "ayedocs generate",
    "build": "npm run build:app && npm run build:lib",
    "deploy:lib": "npm publish",
    "deploy:app": "git add . && git commit -m 'deploy:app' && git push",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "keywords": [
    "node",
    "module",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/ngxer.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/ngxer/issues"
  },
  "dependencies": {
    "@node-minify/core": "^6.2.0",
    "@node-minify/html-minifier": "^6.2.0",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "del": "^6.0.0",
    "firebase-admin": "^9.9.0",
    "fs-extra": "^10.0.0",
    "puppeteer-core": "^10.0.0",
    "recursive-readdir": "^2.2.2",
    "superstatic": "^7.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/recursive-readdir": "^2.2.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "gts": "^3.0.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "typescript": "^4.0.3"
  }
}
